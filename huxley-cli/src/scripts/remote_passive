ssh -A -o "StrictHostKeyChecking no"  -o "UserKnownHostsFile=/dev/null" \
-p 3000 root@#{argv[0]}.#{config.public_domain} << EOF

  cd /root/passive
  if [ -d #{config.repo_name}.git]; then
    rm -rf #{config.repo_name}.git
  fi
  mkdir #{config.repo_name}.git
  cd #{config.repo_name}.git
  /usr/bin/git init --bare

EOF
